<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/cellMemberContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="cards main container"
        android:layout_marginVertical="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >

            <ImageView
                android:id="@+id/cellMemberPresenceIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_presence_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cellMemberName"
                tools:text="Gabriel Rosa do Nascimento figueira da silva sauro larramendi costa e silva santos (Argentininho)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="6dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cellMemberInstrumentTag"
                android:text="Caixa"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/tag_success_shape"
                android:backgroundTint="@color/gray"
                android:textSize="12sp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="6dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>